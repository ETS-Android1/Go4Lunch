<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@android:color/white</item>
        <item name="colorOnSecondary">@color/design_default_color_secondary</item>
    </style>

    <!-- STYLE FOR MAIN ACTIVITY -->
    <style name="AppTheme.NoTitle" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="actionBarTheme">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- STYLE SIGN-IN ACTIVITY -->
    <style name="LoginTheme" parent="AppTheme">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:windowBackground">@drawable/login_background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#08000000</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="NavigationView" parent="AppTheme">
        <item name="textAllCaps">true</item>
        <item name="backgroundColor">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="NavigationViewHeader" parent="ThemeOverlay.AppCompat.Dark">
        <item name="textAllCaps">false</item>
    </style>

    <style name="WorkmateDecided" parent="TextAppearance.MaterialComponents.Body2">
    </style>

    <style name="WorkmateUndecided" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
    </style>

    <style name="DetailViewButtonBarButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textColor">@color/detail_view_button</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="ClosingSoon" parent="AppTheme">
        <item name="android:textColor">@color/colorClosingSoon</item>
    </style>

    <style name="Closed" parent="AppTheme">
        <item name="android:textColor">@color/colorClosed</item>
    </style>

    <style name="Open" parent="AppTheme">
        <item name="android:textColor">?android:attr/colorControlNormal</item>
    </style>

</resources>